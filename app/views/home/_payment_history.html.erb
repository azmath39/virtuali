<%i=0%>
<h3> Payment History</h3>
<table class="table table-striped table-bordered">
<tr><th>Serial No</th><th> Date Of Transaction</th><th> Reference</th><th> Type Of Payment</th><th> Amount</th></tr>
<%@payments.each do |payment|%>

  <tr><td><%=i+=1%></td><td><%=payment.created_at.strftime("%d-%M-%Y %H:%M")%></td><td><%=payment.reference%></td><td><%=payment.payment_type_info%> </td><td> $<%=payment.amount%></td></tr>
<%end%>
  
</table>
 <%#= will_paginate @payments, :renderer => BootstrapPagination::Rails %>