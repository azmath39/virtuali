 
<div class="after_sign_in">
<p><span class="title-text">Messages</span></p><br />
<% @tours.each do |tour|%>
  <% @count = tour.messages.count %>
<% end %>
<% if @count == 0 %>
<p>No Messages!</p>
<% else %>
<table class="table">
        <thead>
          <tr>
            <th>User's Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Interested Tour</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% @tours.each do |tour| %>
          <% if tour.messages %>
          <% tour.messages.order('created_at DESC').each do |message| %>
          <tr>
            <td><%= message.name %></td>
            <td><a href="mailto:#"><%= message.email %></a></td>
            <td><%= link_to "#{message.subject}", "#contact","data-toggle" => "modal",:onclick=>"subject_message('#{message.subject}');"%></td>
            <td><%= link_to "#{message.tour.address}", tour %> </td>
            <td><%= message.created_at.strftime("%b-%d-%Y") %></td>
          </tr>


        
          <% end %>
          <% end %>
          <% end %>
        </tbody>
</table>

<div id="contact" class="modal hide fade in" style="display: none;color: black;">
<div class="modal-header" style="margin-left: 30px;">
  <a class="close" data-dismiss="modal"><i class="icon-remove"></i></a>
  <h3>Subject</h3>
</div>
 
<div class="modal-body" style="max-height: 800px;margin-left: 30px;">
 <div id="subject" >
 
 </div>
  

  
  <div class="modal-footer">
  <a href="#" class="btn" data-dismiss="modal">Close</a>

  
</div>

</div>

</div>

      

<% end %>





</div>
<script>
  function subject_message(id)
  {
   // alert(id);
    $("#subject").html(id);   
    }
 
  
  </script>

  
 