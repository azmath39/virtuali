
<%if current_user%>
<div class="pricing_grid row" style="text-align: center; position: absolute; margin-left: -14%;">
<%else%>
<div class="pricing_grid row" style="margin-left: 5%; text-align: center;">
  <%end%>
<h1 class="center">Virtuali Pricing</h1>
<h2 class="grey center p60">After your wonderful thoughts, pick a plan that best fits your needs!</h2>
<div style="text-align:center;">
  <%= select_tag :product_id, options_from_collection_for_select(Product.all, "id", "name"),:onchange=>"manual_packages()" %>
  <div id="manual_packages"></div>
</div>

</div>
<script>
  $(function() {
    manual_packages();
  });
  function manual_packages(){
    $.ajax({
      type: 'GET',
      url:'/packages/manual_packages',
      data:{
        id:$('#product_id').val()
      }
    }).done(function(html){
      $('#manual_packages').html(html);
    });
  }
</script>