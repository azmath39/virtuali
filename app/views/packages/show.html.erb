<h3>Package Selection</h3>
<hr></hr>
<span id="package_error" style="color:red;"></span>
<div style = "padding:10px;width: 400px;">
  <% @packages.each do |pkg| %>
    <div>
      <%#*<table class="table table-bordered" style="width: 100%; height: 10px; font-size: 12px;">%>
      <p><%=radio_button_tag "user[package][id]",pkg.id,nil,:id=>"package"%>&nbsp;<b><%=pkg.name%></b></p>
      <p><b>Price:</b>&nbsp;<%=pkg.price%></p>
      <p><b>No Of Tours:</b>&nbsp;<%=pkg.max_tours%></p>
      <p><b>Pictures per Tour:</b> &nbsp;<%=pkg.pictures_for_tour%></p>
      <p><b>Template size:</b>&nbsp;600x400</p>
      
        <%unless pkg.monthly_price.nil?%>
      <%=hidden_field_tag "user[package][type_of_payment]",1%>
      <%#*<p><b>Subscription Period</b>:&nbsp;<%=radio_button_tag "user[package][type_of_payment]",1% &nbsp;Monthly&nbsp;<%=radio_button_tag "user[package][type_of_payment]",2%&nbsp;Yearly</p>%>
        <%end%>
    </div>
  <hr />
  <% end %>
</div>