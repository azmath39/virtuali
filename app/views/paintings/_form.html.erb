<style>
  .dropdown-menu{
    padding: 20px;
    width: 300px;
}
</style>


<%= form_for @painting do |f| %>
  <div class="navbar" style="border-radius:100px;">
  <div class="navbar-inner" style="border-radius:100px;">
    <ul class="nav">
      <li class="dropdown" id="menu1">
         <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          Brightness
            <b class="caret"></b>
         </a>
         <div class="dropdown-menu">
           <%=range_field_tag "painting[pro][brightness]",0,:step=>1,:min=>-100,:max=>100,:onchange=>"manipulate()"%><span id="bright_val">0</span><br/>

         </div>
       </li>
<li class="dropdown" id="menu1">
         <a class="dropdown-toggle" data-toggle="dropdown" href="#">
         Contrast
            <b class="caret"></b>
         </a>
         <div class="dropdown-menu">
           <%=range_field_tag "painting[pro][contrast]",0,:step=>1,:min=>-100,:max=>100,:onchange=>"manipulate()"%><span id="cont_val">0</span><br/>

         </div>
       </li>


       <li class="dropdown" id="menu1">
         <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          Sharpness
            <b class="caret"></b>
         </a>
         <div class="dropdown-menu">
           <%=range_field_tag "painting[pro][sharpness]",0,:step=>1,:min=>0,:max=>1000,:onchange=>"sharpness()"%><span id="sharp_val">0</span><br/>

         </div>
       </li>

       <li class="dropdown" id="menu1">
         <a class="dropdown-toggle" data-toggle="dropdown" href="#">
         Saturation
            <b class="caret"></b>
         </a>
         <div class="dropdown-menu">
           <%=range_field_tag "painting[pro][saturate]",0,:step=>1,:min=>-100,:max=>100,:onchange=>"manipulate()"%><span id="sat_val">0</span><br/>

         </div>
       </li>


      

    </ul>
  </div>
</div>
  <% if @painting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@painting.errors.count, "error") %> prohibited this painting from being saved:</h2>
      <ul>
      <% @painting.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%#= f.label :name %>
    <%#= f.text_field :name %>
  </div>
  <p>
    <div style=" ">
      <center>
<%= image_tag @painting.image_url,:id=>"image-id" %></center>
</div>
  </p>
  
  
  <div class="actions" style="float:right;">
    <%= f.submit "Apply", :class=>"btn-small btn-success"%>
 
<% end %>

<%=button_tag "undo",:onclick=>"revert()",:class=>"btn-small btn-danger"%>
    </div>