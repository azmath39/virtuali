<%= form_for @tour, :url => 'create', :html =>{:class => "form-horizontal"}  do |f| %>
<h3><legend>Tour Details:</legend></h3>
<div style="float:left;">
<%#*<div class="control-group">%>
  <%#= f.label :name, :html => {:class => 'control-label'} %>
  <%#= f.text_field :name %>
<%#*</div>%>
<div class ="control-group">
  <%= f.label :address, :html => {:class => 'control-label'} %>
  <%= f.text_field :address %>
</div>
<div class ="control-group">
  <%= f.label :city, :html => {:class => 'control-label'} %>
  <%= f.text_field :city %>
</div>
<div class ="control-group">
  <%= f.label :zip, "Zip Code:", :html => {:class => 'control-label'} %>
  <%= f.text_field :zip %>
</div>
<div class ="control-group">
  <%= f.label :subdivision, :html => {:class => 'control-label'} %>
  <%= f.text_field :subdivision %>
</div>

</div>
<div class="span1"></div>
<div style="float:left; ">
<div class="control-group">
  <%= f.label :price %>
  <%= f.text_field :price %>
</div>
<div class="control-group">
  <%= f.label :square_footage %>
  <%= f.text_field :square_footage %>
</div>
<div class="control-group">
  <%= f.label :bed_rooms %>
  <%= f.text_field :bed_rooms %>
</div>
<div class="control-group">
  <%= f.label :bath_rooms %>
  <%= f.text_field :bath_rooms %>
</div>
</div>
<div style="float:left;margin-top: 10px;width: 550px; clear: both;">
<div class="contol-group" style="width:550px;">
  <%= f.label :description %>
  <%= f.text_area :description,:cols => 20, :rows => 10 %>
</div>
</div>
<div style="float:left;margin-top: 10px;clear: both;">
<div>
  <%= f.submit :class => 'btn btn-large btn-primary' %>
</div>
<% end %>
</div>