<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <%if current_user %>
      <div class="alert alert-<%= name == :notice ? "success" : "error" %>" style ="width: 650px; margin: 11px 0 0px 375px; position: absolute; z-index: 1;">
      <%else%>
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>" style ="width: 650px; margin: -34px 0 0px 375px; position: absolute; z-index: 1;">
        <%end%>
        <a class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      </div>
    <% elsif msg.is_a?(Array)%>
      <div class="alert alert-<%= name == :notice ? "success" : "error" %>" style ="width: 650px; margin: 10px 0 20px 350px; position: relative;">
        <a class="close" data-dismiss="alert">&#215;</a>
        <%msg.each do |ms|%>
          <%= content_tag :div, ms, :id => "flash_#{name}" %>
        <%end%>
      </div>
    <%end%>

  <% end %>
